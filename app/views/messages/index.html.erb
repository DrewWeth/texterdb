<h1>Listing messages</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Recip name</th>
      <th>Recip number</th>
      <th>Sent count</th>
      <th>Sent</th>
      <th>Sent at</th>
      <th>Sent by name</th>
      <th>Sent by number</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.recip_name %></td>
        <td><%= message.recip_number %></td>
        <td><%= message.sent_count %></td>
        <td><%= message.sent %></td>
        <td><%= message.sent_at %></td>
        <td><%= message.sent_by_name %></td>
        <td><%= message.sent_by_number %></td>
        <td><%= message.priority %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

